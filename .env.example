# OPNsense
OPNSENSE_URL=https://192.168.1.1
OPNSENSE_API_KEY=your-api-key
OPNSENSE_API_SECRET=your-api-secret
OPNSENSE_VERIFY_SSL=false

# Technitium DNS
TECHNITIUM_URL=http://192.168.1.2:5380
TECHNITIUM_TOKEN=your-token

# Sync
DNS_ZONE=home.arpa
SYNC_INTERVAL_MINUTES=5
LOG_LEVEL=INFO

# Static entries (optional): hostname=ip,hostname2=ip2
#STATIC_ENTRIES=printer=192.168.1.50,nas=192.168.1.10

# Dashboard (http://localhost:8099)
DASHBOARD_ENABLED=true
DASHBOARD_PORT=8099
