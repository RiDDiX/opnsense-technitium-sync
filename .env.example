# OPNsense API Konfiguration
OPNSENSE_URL=https://opnsense.home.arpa
OPNSENSE_API_KEY=dein-api-key
OPNSENSE_API_SECRET=dein-api-secret
OPNSENSE_VERIFY_SSL=false

# Technitium DNS API Konfiguration
TECHNITIUM_URL=http://technitium.home.arpa:5380
TECHNITIUM_TOKEN=dein-token

# Sync Einstellungen
DNS_ZONE=home.arpa
SYNC_INTERVAL_MINUTES=5
LOG_LEVEL=INFO

